<%- include('partials/header') -%>
<body class="body-background-inapp">
<div class="container">
  <div class="justify-content-center row mt-5 color-theme rounded-lg">
      <div class="col-6">
          <div class="mt-4">
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
          </div>
          <div class="mt-5">
            <h2 class="title">Add a drink</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label form-heading">Drink Name</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label form-heading">Ingredients</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label form-heading">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="text btn btn-primary" value="Upload">Submit</button>
              <!-- <button type="submit" class="btn btn-primary" value="Upload">Submit</button> -->
            </form>
          </div>
      </div>
    </div>


    <!-- Post Gallery -->
    <div class="container">
      <div class="row justify-content-left mt-5">
        <ul class="row list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <div class="flex justify-center">
              
              <div class="flex flex-col md:flex-row rounded-lg color-theme shadow-lg">
                <a href="/post/<%= posts[i]._id%>"><img class="image-border w-full h-96 md:h-auto object-cover md:w-48 rounded-t-lg md:rounded-none md:rounded-l-lg" src="<%=posts[i].image%>" alt="" /></a>
  
                <div class="p-6 flex flex-col justify-start">
                  <h5 class="text-gray-900 font-medium mb-2 title"><%=posts[i].title%></h5>
                  <p class="text-gray-700 text-base mb-4">
                    <%=posts[i].caption%>
                  </p>
                  <p class="text-gray-600 text-xs">Uploaded on <%=posts[i].createdAt%></p>
                </div>
              </div>
            </div>
            <hr class="my-8 h-px color-theme border-0 dark:bg-gray-700">
          <% } %>
          </ul>
      </div>
    </div>
    <!-- Post Gallery -->

  </div>
</div>
</body>
<%- include('partials/footer') -%>